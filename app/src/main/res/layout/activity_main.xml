<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIND CARE"
        android:textSize="28sp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/diaryBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일기 쓰기"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTitle"/>

    <Button
        android:id="@+id/walkingBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="산책 가기"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diaryBtn"/>

    <Button
        android:id="@+id/sleepingBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수면 기록"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walkingBtn"/>

    <Button
        android:id="@+id/myPageBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sleepingBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
